@model ElegantHome.Web.ViewModels.Product.ProductListViewModelWithPaging

<!-- Main Wrapper Start -->
<div id="main-wrapper" class="section">

    <!-- Page Banner Section Start-->
    <div class="page-banner-section section" style="background-image: url(/images/weddinggift_adobespark.png)">
        <div class="container">
            <div class="row">

                <!-- Page Title Start -->
                <div class="page-title text-center col">
                    <h1>shop page</h1>
                </div><!-- Page Title End -->

            </div>
        </div>
    </div><!-- Page Banner Section End-->
    <!-- Product Section Start-->
    <div class="product-section section pt-120 pb-120">
        <div class="container">

            <!-- Product Wrapper Start-->
            <div class="row">

                @foreach (var item in Model.Products)
                    {

                <div class="col-lg-4 col-md-6 col-12 mb-60">

                    <div class="product">

                        <!-- Image Wrapper -->
                        <div class="image">
                            <!-- Image -->
                            <a asp-controller="Products" asp-action="Details" asp-route-productId="@item.Id"><img class="allImg_resize" src="@item.ImageUrl"   alt="Product"></a>
                            <!-- Wishlist -->
                            @*<a href="#" class="wishlist"><i class="fa fa-heart-o"></i></a>*@
                            <!-- Label -->
                        </div>
                        <!-- Content -->
                        <div class="content">

                            <!-- Head Content -->
                            <div class="head fix">

                                <!-- Title & Category -->
                                <div class="title-category float-left">
                                   <a  asp-controller="Products" asp-action="Details" asp-route-productId="@item.Id"><h5>@item.Name</h5></a>
                                    <a href="shop.html" class="category" style="color: red"><b>@item.CategoryName</b></a>
                                </div>
                                <!-- Price -->
                                <div class="price float-right">
                                    <span>@item.Price лв.</span>
                                    <!-- Old Price Mockup If Need -->
                                    <!-- <span class="old">$46</span> -->
                                </div>

                            </div>

                            <!-- Action Button -->
                            <div class="action-button fix">
                                <a href="#">add to cart</a>
                            </div>

                        </div>

                    </div>

                </div>
                    }

                <partial name="_PagingParcal" model="@Model" />

            </div><!-- Product Wrapper End-->

        </div>
    </div><!-- Product Section End-->

</div><!-- Main Wrapper End -->
