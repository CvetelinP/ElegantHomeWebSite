@model ElegantHome.Web.ViewModels.Paging.PagingViewModel
<div class="pagination col-12 mt-20">
    <ul>
        <li class="arrows @if (!Model.HasPreviousPage) { <text>disabled</text> }">
            <a asp-action="All" asp-route-id="@Model.PreviousPageNumber"><i class="fa fa-angle-left"></i></a>
        </li>

        @for (int i = Model.PageNumber - 4; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li><a asp-action="All" asp-route-id="@i">@i</a></li>
            }
        }
        <li>
            <span>
                @Model.PageNumber
                <span class="sr-only">(current)</span>
            </span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 4; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li><a asp-action="All" asp-route-id="@i">@i</a></li>
            }
        }
        
       
        <li class="arrows @if (!Model.HasNextPage) { <text>disabled</text> }">
            <a asp-action="All" asp-route-id="@Model.NextPageNumber"><i class="fa fa-angle-right"></i></a>
        </li>
    </ul>
</div>