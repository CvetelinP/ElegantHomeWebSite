@model ElegantHome.Web.ViewModels.Category.CategoryInListViewModel


<li>
    <a>Категории</a>
    <ul class="sub-menu">
        @foreach (var item in Model.Categories)
        {
            <li><a asp-controller="Products" asp-action="ByName" asp-route-categoryId="@item.Id">@item.Name</a></li>
        }
    </ul>
</li>
